{
  "name": "electronapp",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "dist/main/index.js",
  "scripts": {
    "dev:env": "node scripts/dev.build.js",
    "dev": "pnpm dev:env && electron-vite dev",
    "start": "electron-vite preview",
    "typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "typecheck:app": "tsc --noEmit -p tsconfig.app.json --composite false",
    "typecheck": "pnpm run typecheck:node && pnpm run typecheck:app",
    "build": "pnpm typecheck && electron-vite build",
    "build:electron": "node ./node_modules/electron/install.js",
    "build:elec": "cd node_modules/electron && pnpm postinstall && cd ../..",
    "build:linux": "pnpm run build && electron-builder --linux",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@electron-toolkit/preload": "^3.0.2",
    "@electron-toolkit/utils": "^4.0.0",
    "@prisma/client": "^7.2.0",
    "@tailwindcss/vite": "^4.1.17",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.10.1",
    "tailwind-merge": "^3.4.0",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@tailwindcss/postcss": "^4.1.17",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "autoprefixer": "^10.4.22",
    "babel-plugin-react-compiler": "^1.0.0",
    "electron": "^39.2.6",
    "electron-builder": "^26.0.12",
    "electron-vite": "^5.0.0",
    "postcss": "^8.5.6",
    "prisma": "^7.2.0",
    "tailwindcss": "^4.1.17",
    "vite": "^7.2.4",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "build": {
    "appId": "com.stl-3d-viewer",
    "productName": "STL 3D Viewer",
    "files": [
      "dist/**/*",
      "package.json",
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    },
    "mac": {
      "icon": "build/icon.ico",
      "target": "dmg"
    },
    "linux": {
      "icon": "build/icon.ico",
      "target": "AppImage"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
