generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Server {
  id         String @id
  name       String
  host       String
  apiPort    Int
  rconPort   Int
  serverPort Int

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Proxy {
  id   String @id
  name String
  port Int
}

model Worlds {
  id   String @id
  name String

  type       ServerType // HUB | WORLD
  serverPort Int
  rconPort   Int

  proxyId String
}

enum ServerType {
  HUB
  WORLD
}
